{
    "compilerOptions": {
      "sourceMap": true,
      "target": "ES6",
      "module": "CommonJS",
      "strict": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["jest", "node"]
    },
    "include": ["src/**/*"],
  }
  